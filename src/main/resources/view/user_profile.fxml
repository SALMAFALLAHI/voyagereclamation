<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="controllers.UserProfileController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Mon Profil Utilisateur">
        <font>
            <Font name="System Bold" size="22.0" />
        </font>
    </Label>

    <GridPane hgap="10" vgap="15" style="-fx-font-size: 14px;">
        <padding>
            <Insets top="10" bottom="10" left="30" right="30"/>
        </padding>
        <Label text="Nom:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="nomLabel" text="[Nom]" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Prénom:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="prenomLabel" text="[Prénom]" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="emailLabel" text="[Email]" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Téléphone:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="telephoneLabel" text="[Téléphone]" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Statut:" GridPane.rowIndex="4" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
        <Label fx:id="statusLabel" text="[Statut]" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    </GridPane>

    <HBox alignment="CENTER" spacing="20.0">
        <Button fx:id="editProfileButton" text="Modifier mes informations" onAction="#handleEditProfile" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button fx:id="logoutButton" text="Déconnexion" onAction="#handleLogoutAction" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>

