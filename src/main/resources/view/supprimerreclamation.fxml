<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" spacing="20" stylesheets="@/view/css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.supprimerreclamation">
   <padding>
      <Insets bottom="20" left="20" right="20" top="20" />
   </padding>
   <children>
      <!-- Header Section -->
      <Label fx:id="headerLabel" text="Supprimer une RÃ©clamation">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="30" />
         </VBox.margin>
      </Label>

      <!-- Main Content Section -->
      <VBox fx:id="contentPane" prefHeight="300.0" prefWidth="560.0" spacing="15">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         <children>
            <!-- ListView for Reclamations -->
            <ListView fx:id="supprimerlist" prefHeight="200.0" prefWidth="520.0" />

            <!-- Buttons for Actions -->
            <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10 0 0 0;">
               <children>
                  <Button fx:id="retourButton" onAction="#annulersupprimer" prefHeight="40.0" prefWidth="130.0" text="Annuler" />
                  <Button fx:id="validerButton" onAction="#validersupprimer" prefHeight="40.0" prefWidth="130.0" text="Valider" />
