<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.Menureclamation" stylesheets="@/view/css/style5.css" spacing="20" alignment="CENTER">
   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>
   <children>
      <!-- Header Section -->
      <Label fx:id="headerLabel" text="Votre réclamation est une priorité pour nous">
         <font>
            <Font name="Berlin Sans FB Demi Bold" size="20.0"/>
         </font>
         <VBox.margin>
            <Insets bottom="30"/>
         </VBox.margin>
      </Label>

      <!-- Main Content Section -->
      <VBox fx:id="contentPane" prefHeight="300.0" prefWidth="560.0" spacing="15" alignment="CENTER">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>
         <children>


            <!-- Buttons Section -->
            <Button fx:id="btnajouter" text="Ajouter une réclamation" onAction="#ajouterunereclamation" prefWidth="250.0" prefHeight="40.0"/>
            <Button fx:id="btnmodifier" text="Modifier une réclamation" onAction="#modifierunereclamation" prefWidth="250.0" prefHeight="40.0"/>
            <Button fx:id="btnsupprimer" text="Supprimer une réclamation" onAction="#supprimerunereclamation" prefWidth="250.0" prefHeight="40.0"/>
            <Button fx:id="btnafficher" text="Historique" onAction="#afficherlesreclamation" prefWidth="250.0" prefHeight="40.0"/>
         </children>
      </VBox>
   </children>
</VBox>