<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" fx:controller="controllers.LoginController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>

    <Label text="Connexion au Système de Gestion de Vols">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Email:" minWidth="100"/>
        <TextField fx:id="emailField" HBox.hgrow="ALWAYS" promptText="adminjavapi@gmail.com ou votre email"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Mot de passe:" minWidth="100"/>
        <PasswordField fx:id="passwordField" HBox.hgrow="ALWAYS" promptText="votre mot de passe" onAction="#handlePasswordEnter"/>
    </HBox>

    <Label fx:id="errorLabel" textFill="RED" />

    <Button fx:id="loginButton" text="Se connecter" onAction="#handleLoginButtonAction" prefHeight="35.0" prefWidth="150.0"/>
    
    <Button fx:id="backToWelcomeButton" text="Retour à l_accueil" onAction="#handleBackToWelcomeAction" prefHeight="30.0" prefWidth="150.0" style="-fx-font-size: 10pt;">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>
</VBox>

