<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="683.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.Modifierreclamation" stylesheets="@/css/style6.css" spacing="20">
   <padding>
      <Insets top="0" right="20" bottom="20" left="20"/>
   </padding>
   <children>
      <!-- Header Section -->
      <VBox fx:id="headerPane" prefHeight="77.0" prefWidth="600.0" alignment="CENTER">
         <padding>
            <Insets top="10"/>
         </padding>
         <children>
            <Label fx:id="headerLabel" text="Modifier une Réclamation">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="35.0"/>
               </font>
            </Label>
         </children>
      </VBox>

      <!-- Main Content Section -->
      <VBox fx:id="contentPane" prefHeight="550.0" prefWidth="560.0" spacing="15">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
         </padding>
         <children>
            <!-- ListView for Reclamations -->
            <ListView fx:id="reclamationList" prefHeight="200.0" prefWidth="520.0"/>

            <!-- Reclamation ID -->
            <HBox spacing="10" alignment="CENTER_LEFT">
               <children>
                  <Label text="Réclamation ID">
                     <font>
                        <Font name="System Bold" size="14.0"/>
                     </font>
                  </Label>
                  <TextField fx:id="modifierid" prefWidth="150.0"/>
               </children>
            </HBox>

            <!-- Type de Réclamation -->
            <HBox spacing="10" alignment="CENTER_LEFT">
               <children>
                  <Label text="Type de Réclamation">
                     <font>
                        <Font name="System Bold" size="14.0"/>
                     </font>
                  </Label>
                  <ComboBox fx:id="type" prefWidth="150.0"/>
               </children>
            </HBox>

            <!-- Commentaire -->
            <Label text="Commentaire">
               <font>
                  <Font name="System Bold" size="14.0"/>
               </font>
               <VBox.margin>
                  <Insets top="10"/>
               </VBox.margin>
            </Label>
            <TextArea fx:id="modifierreclamation" prefHeight="154.0" prefWidth="520.0"/>

            <!-- Adresse Email -->
            <Label text="Adresse Email pour recevoir la réponse :"/>
            <TextField fx:id="adresseEmailField" promptText="Votre adresse email"/>

            <!-- Buttons for Actions -->
            <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
               <children>
                  <Button fx:id="retourButton" text="Annuler" onAction="#annulermodification" prefHeight="40.0" prefWidth="130.0"/>
                  <Button fx:id="validerButton" text="Valider" onAction="#validermodification" prefHeight="40.0" prefWidth="130.0"/>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>